{
  "model_path": "/data/kaggle_projects/commodity_prediction/models/best_model.pth",
  "kg_db_path": "/data/kaggle_projects/commodity_prediction/database/commodity_kg.db",
  "model": {
    "d_model": 128,
    "n_heads": 4,
    "n_layers": 6,
    "d_ff": 512,
    "dropout": 0.1,
    "d_context": 64,
    "n_context_heads": 2,
    "max_context_tokens": 256,
    "n_targets": 80,
    "forecast_horizons": [1, 2, 3, 4],
    "use_peft": true,
    "lora_r": 16,
    "lora_alpha": 32,
    "lora_dropout": 0.05
  },
  "retrieval": {
    "max_nodes": 128,
    "max_edges": 256,
    "similarity_threshold": 0.1,
    "ts_patch_ratio": 0.7,
    "max_hops": 2,
    "recency_decay": 90.0,
    "market_match_weight": 0.2,
    "recency_weight": 0.1,
    "edge_strength_weight": 0.2,
    "similarity_weight": 0.5
  },
  "patches": {
    "window_sizes": [7, 14, 28],
    "strides": [1, 3, 7],
    "embedding_dim": 128,
    "max_patches_per_series": 100,
    "normalize_patches": true,
    "embedder_config": {
      "architecture": "hybrid",
      "dropout": 0.1
    }
  }
}
