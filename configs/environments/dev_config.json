{
  "patches": {
    "window_sizes": [7, 14],
    "strides": [1, 3],
    "embedding_dim": 64,
    "max_patches_per_series": 20,
    "normalize_patches": true,
    "min_patch_length": 5,
    "embedder_architecture": "cnn",
    "embedder_dropout": 0.1
  },
  "knowledge_graph": {
    "db_path": "database/dev_commodity_kg.db",
    "window_sizes": [7, 14],
    "strides": [1, 3],
    "correlation_threshold": 0.1,
    "p_value_threshold": 0.1,
    "extract_entities": true,
    "include_regime_detection": false
  },
  "retrieval": {
    "max_nodes": 32,
    "max_edges": 64,
    "similarity_threshold": 0.1,
    "ts_patch_ratio": 0.7,
    "max_hops": 2,
    "recency_decay": 90.0,
    "similarity_weight": 0.5,
    "market_match_weight": 0.2,
    "recency_weight": 0.1,
    "edge_strength_weight": 0.2
  },
  "model": {
    "d_model": 64,
    "n_heads": 2,
    "n_layers": 2,
    "d_ff": 256,
    "dropout": 0.1,
    "d_context": 32,
    "n_context_heads": 1,
    "max_context_tokens": 64,
    "n_targets": 10,
    "forecast_horizons": [1, 2],
    "use_peft": false,
    "lora_r": 8,
    "lora_alpha": 16,
    "lora_dropout": 0.05
  },
  "training": {
    "batch_size": 2,
    "num_workers": 1,
    "min_lookback": 50,
    "min_lookback_days": 30,
    "max_epochs": 2,
    "learning_rate": 1e-3,
    "weight_decay": 1e-5,
    "min_learning_rate": 1e-6,
    "max_grad_norm": 1.0,
    "use_wandb": false,
    "wandb_project": "commodity-forecasting-dev",
    "save_path": "models/dev_best_model.pth",
    "log_interval": 10,
    "val_split": 0.2,
    "early_stopping_patience": 2
  },
  "inference": {
    "model_path": "models/dev_best_model.pth",
    "kg_db_path": "database/dev_commodity_kg.db",
    "batch_size": 4,
    "use_cache": true,
    "cache_size": 100,
    "output_path": "dev_submission.csv",
    "confidence_threshold": 0.5
  },
  "system": {
    "device": "auto",
    "seed": 42,
    "debug": true,
    "log_level": "DEBUG",
    "data_dir": "kaggle_data",
    "train_data_path": "kaggle_data/train.csv",
    "test_data_path": "kaggle_data/test.csv",
    "target_pairs_path": "kaggle_data/target_pairs.csv"
  }
}
