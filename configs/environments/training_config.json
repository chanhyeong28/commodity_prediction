{
  "patches": {
    "window_sizes": [7, 14, 28],
    "strides": [1, 3, 7],
    "embedding_dim": 128,
    "max_patches_per_series": 100,
    "normalize_patches": true,
    "min_patch_length": 5,
    "embedder_architecture": "hybrid",
    "embedder_dropout": 0.1
  },
  "knowledge_graph": {
    "db_path": "database/commodity_kg.db",
    "window_sizes": [7, 14, 28],
    "strides": [1, 3, 7],
    "correlation_threshold": 0.1,
    "p_value_threshold": 0.1,
    "extract_entities": true,
    "include_regime_detection": true
  },
  "retrieval": {
    "max_nodes": 128,
    "max_edges": 256,
    "similarity_threshold": 0.1,
    "ts_patch_ratio": 0.7,
    "max_hops": 2,
    "recency_decay": 90.0,
    "similarity_weight": 0.5,
    "market_match_weight": 0.2,
    "recency_weight": 0.1,
    "edge_strength_weight": 0.2
  },
  "model": {
    "d_model": 128,
    "n_heads": 4,
    "n_layers": 6,
    "d_ff": 512,
    "dropout": 0.1,
    "d_context": 64,
    "n_context_heads": 2,
    "max_context_tokens": 256,
    "n_targets": 80,
    "forecast_horizons": [1, 2, 3, 4],
    "use_peft": true,
    "lora_r": 16,
    "lora_alpha": 32,
    "lora_dropout": 0.05
  },
  "training": {
    "batch_size": 8,
    "num_workers": 2,
    "min_lookback": 100,
    "min_lookback_days": 50,
    "max_epochs": 20,
    "learning_rate": 1e-4,
    "weight_decay": 1e-5,
    "min_learning_rate": 1e-6,
    "max_grad_norm": 1.0,
    "use_wandb": false,
    "wandb_project": "commodity-forecasting",
    "save_path": "models/best_model.pth",
    "log_interval": 100,
    "val_split": 0.2,
    "early_stopping_patience": 5
  },
  "inference": {
    "model_path": "models/best_model.pth",
    "kg_db_path": "database/commodity_kg.db",
    "batch_size": 16,
    "use_cache": true,
    "cache_size": 1000,
    "output_path": "submission.csv",
    "confidence_threshold": 0.5
  },
  "system": {
    "device": "auto",
    "seed": 42,
    "debug": false,
    "log_level": "INFO",
    "data_dir": "kaggle_data",
    "train_data_path": "kaggle_data/train.csv",
    "test_data_path": "kaggle_data/test.csv",
    "target_pairs_path": "kaggle_data/target_pairs.csv"
  }
}
